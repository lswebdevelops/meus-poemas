<a href="/dashboard">&larr; Voltar</a>
<div class="admin-title">
    <h2>Ver / Editar Poema</h2>
    <form action="/delete-poem/<%= data._id %>?_method=DELETE" method="POST">
    
        <input type="submit" value="Deletar" class="btn-delete btn">
    
    </form>
</div>

<form action="/edit-poem/<%= data._id %>?_method=PUT" method="POST">

    <label for="title"><b>Título</b></label>
    <input type="text" placeholder="Título do Poema" value="<%= data.title %>" name="title">

    <label for="author"><b>Autor(a)</b></label>
    <input type="text" placeholder="Autor(a) do Poema" value="<%= data.author %>" name="author">

    <label for="body"><b>Conteúdo</b></label>
    <textarea cols="50" role="10" name="body"><%= data.body %></textarea>

    <input type="submit" value="Atualizar" class="btn">

</form>